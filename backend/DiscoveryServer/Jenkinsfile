pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'JDK11'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                dir('backend/DiscoveryServer') {
                    // On Windows use bat
                    bat 'mvn clean package'
                }
            }
        }

        stage('Deploy / Publish') {
            steps {
                dir('backend/DiscoveryServer') {
                    bat 'mvn deploy'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
